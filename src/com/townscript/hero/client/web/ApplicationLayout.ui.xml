<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		
	</ui:style>
	<b:Container styleName="container-fluid">
		<b:Row>
			<b:Column size="MD_8" offset="MD_2">

				<b:Form>
					<b:FieldSet>

						<b:FormGroup>
							<b:FormLabel for="appName">Application Name</b:FormLabel>
							<b:TextBox b:id="appName" ui:field="appName"
								placeholder="Application Name" />
						</b:FormGroup>

						<b:FormGroup>
							<b:FormLabel for="successUrl">Success URL</b:FormLabel>
							<b:TextBox b:id="successUrl" ui:field="successUrl"
								placeholder="Success URL" />
						</b:FormGroup>

						<b:FormGroup>
							<b:FormLabel for="failureUrl">Failure URL</b:FormLabel>
							<b:TextBox b:id="failureUrl" ui:field="failureUrl"
								placeholder="Failure URL" />
						</b:FormGroup> 

						<b:FormGroup>
							<b:FormLabel for="paymentOptions">Payment Options</b:FormLabel>
							<b:Div>
								<b:CheckBoxButton styleName="form-control" ui:field="isCitrus" text="Citrus"></b:CheckBoxButton>
								<b:CheckBoxButton styleName="form-control" ui:field="isPayUMoney" text="PayUMoney"></b:CheckBoxButton>
								<b:CheckBoxButton styleName="form-control" ui:field="isNormal" text="Credit/Debit Card"></b:CheckBoxButton>
							</b:Div>							
						</b:FormGroup>
					</b:FieldSet>
				</b:Form>

			</b:Column>
		</b:Row>
	</b:Container>
</ui:UiBinder> 